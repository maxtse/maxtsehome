<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans

			http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
			 http://www.springframework.org/schema/aop
            http://www.springframework.org/schema/aop/spring-aop-3.1.xsd
			http://www.springframework.org/schema/context
			http://www.springframework.org/schema/context/spring-context-3.0.xsd"

       default-lazy-init="false">
    <context:annotation-config/>
    <context:property-placeholder location="classpath*:*.properties" ignore-unresolvable="true"/>


    <bean class="com.max.tse.common.utils.SpringWrapper"/>


    <bean id="medisShardInfo" class="com.max.tse.redis.client.MedisShardInfo">
        <constructor-arg name="host" value="${redis.host}"/>
        <constructor-arg name="port" value="${redis.port}"/>
        <constructor-arg name="password" value="${redis.password}"/>
    </bean>
    <bean id="medis" class="redis.clients.jedis.Jedis">
        <constructor-arg name="shardInfo" ref="medisShardInfo" type="redis.clients.jedis.JedisShardInfo"/>
    </bean>

      <!-- 自动搜索非@Controller标注的类，和非拦截器 -->
    <context:component-scan base-package="com">
        <context:exclude-filter type="annotation"
                                expression="org.springframework.stereotype.Controller"/>
    </context:component-scan>

    <bean id="springBean" class="com.max.tse.spring.SpringBean"/>

    <bean id="factoryCar" class="com.max.tse.spring.beanFactory.Car" init-method="myInit" destroy-method="myDestroy"/>

    <bean id="carA" class="com.max.tse.spring.beanFactory.CarA">
        <property name="carB" ref="carB"/>
        <property name="desc" value="desca"/>
    </bean>

    <bean id="carB" class="com.max.tse.spring.beanFactory.CarB">
        <property name="carA" ref="carA"/>
        <property name="descB" value="descB"/>
    </bean>

    <!-- redis-->
    <bean id="redisStringService" class="com.max.tse.redis.api.impl.RedisStringServiceImpl">
        <constructor-arg name="jedis" ref="medis"/>
    </bean>

    <bean id="redisBaseService" class="com.max.tse.redis.api.impl.RedisBaseServiceImpl">
        <constructor-arg name="jedis" ref="medis"/>
    </bean>

    <bean id="redisNumberService" class="com.max.tse.redis.api.impl.RedisNumberServiceImpl">
        <constructor-arg name="jedis" ref="medis"/>
    </bean>

    <bean id="redisHashService" class="com.max.tse.redis.api.impl.RedisHashServiceImpl">
        <constructor-arg name="jedis" ref="medis"/>
    </bean>

    <bean id="redisLock" class="com.max.tse.redis.lock.impl.RedisLockImpl">
        <constructor-arg name="jedis" type="redis.clients.jedis.Jedis" ref="medis"/>
    </bean>
    <aop:aspectj-autoproxy proxy-target-class="true"/>

    <aop:config proxy-target-class="true">
        <aop:aspect ref="weaver1">
            <aop:pointcut id="afterReturningPoint" expression="within(com.max.tse..*.ToWeave) and args(String, int)"/><!-- 绑定入参 这里遇到问题是within用模糊匹配：*.*Weave 无法匹配，得告诉他你的包 以及是否子包查询-->
            <aop:after-returning method="afterReturning" pointcut-ref="afterReturningPoint"/>
        </aop:aspect>
    </aop:config>

    <bean id="weaver1" class="com.max.tse.spring.aop.Weaver1"/>

    <!-- 只是用于模板 不用于页面展示 -->
    <bean id="velocityEngine" class="org.springframework.ui.velocity.VelocityEngineFactoryBean">
        <property name="resourceLoaderPath" value="classpath:/vm/"/>
        <property name="velocityPropertiesMap">
            <props>
                <prop key="input.encoding">UTF-8</prop>
                <prop key="output.encoding">UTF-8</prop>
            </props>
        </property>
    </bean>

    <bean id="velocityTemplateService" class="com.max.tse.spring.template.VelocityTemplateService">
        <constructor-arg ref="velocityEngine"/>
        <constructor-arg>
            <map>
                <entry key="firstVm" value="firstVm.vm"/>
                <entry key="userVm" value="userVm.vm"/>
            </map>
        </constructor-arg>
    </bean>







</beans>